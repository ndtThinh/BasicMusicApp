<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:background="@color/purple_200"
    android:padding="10dp"
    tools:ignore="ExtraText">
    tools:context=".fragments.NowSongPlayingFragment">


    <ImageView
        android:id="@+id/imgSongPlaying"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_centerVertical="true"
        android:scaleType="centerCrop"
        android:src="@drawable/music_player" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/imgSongPlaying"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvTitleSongPlaying"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="@string/app_name"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tvSingerNamePlaying"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textColor="@android:color/white"
            android:textSize="15sp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_marginHorizontal="2dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btnPrevNotificationPlaying"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginRight="3dp"
            android:background="@color/purple_200"
            android:src="@drawable/skip_prev_icon" />

        <ImageButton
            android:id="@+id/btnPausePlayNotificationPlaying"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginRight="3dp"
            android:background="@color/purple_200"
            android:src="@drawable/pause_icon" />

        <ImageButton
            android:id="@+id/btnNextNotificationPlaying"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginRight="3dp"
            android:background="@color/purple_200"
            android:src="@drawable/skip_next_icon" />

        <ImageButton
            android:id="@+id/btnClearNotificationPlaying"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@color/purple_200"
            android:src="@drawable/clear_icon" />
    </LinearLayout>

</RelativeLayout>